Bootstrap: docker
From: ubuntu:18.10 

%help

    Container for Canu 1.8
    https://github.com/marbl/canu

%labels

    VERSION "Canu 1.8"

%post
    
    exit 0

    # dependencies
    apt-get update
    apt-get install -y \
        build-essential \
        gnuplot \
        language-pack-en \
        openjdk-8-jre \
        perl \
        wget

    # install Canu
    wget -O "canu.tar.gz" \
        --no-check-certificate \
        https://github.com/marbl/canu/archive/v1.8.tar.gz
    mkdir canu
    tar -zxf canu.tar.gz \
        -C canu \
        --strip-components 1
    cd canu/src || exit 1
    make
    cd ../.. || exit 1
    rm -rf canu.tar.gz

%environment

    export PATH="${PATH}:/canu/Linux-amd64/bin"

%runscript

    exec /canu/Linux-amd64/bin/canu "$@"



