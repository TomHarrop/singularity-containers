Bootstrap: docker
From: ubuntu:16.04

%help
    ONT MinKNOW 19.06.8-1 GUI in a container

    Run as follows:

    singularity instance start \
        -B output/dir/run:/run,output/dir/var:/var \
        minknow_19.06.8.sif \
        minknow

%labels
    MAINTAINER "Tom Harrop"
    VERSION "MinKNOW 19.06.8-1"

%post
    # install dependencies
    apt update
    apt install -y \
        apt-transport-https \
        libasound2 \
        libgconf-2-4 \
        libgtk-3-dev \
        libnss3 \
        libxss1 \
        wget

    # install minknow
    wget \
        -O- https://mirror.oxfordnanoportal.com/apt/ont-repo.pub \
        | apt-key add -
    echo "deb http://mirror.oxfordnanoportal.com/apt xenial-stable non-free" \
        | tee /etc/apt/sources.list.d/nanoporetech.sources.list
    apt update
    apt install -y minknow-nc=19.06.8-1~xenial

%startscript
    /opt/ONT/MinKNOW/bin/mk_manager_svc &
    nohup /opt/ui/MinKNOW > /dev/null 2>&1 < /dev/null &
