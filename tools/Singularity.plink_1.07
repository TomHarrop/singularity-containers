Bootstrap: docker
From: ubuntu:18.04

%help

    plink 1.07
    http://zzz.bwh.harvard.edu/plink

%labels

    MAINTAINER "Tom Harrop"
    VERSION "plink 1.07"

%post

    # install plink
    apt-get update
    apt-get install -y \
        plink

    # run as plink
    ln -s /usr/bin/plink1 /usr/bin/plink

%runscript

    exec /usr/bin/plink "$@"
