Bootstrap: docker
From: ubuntu:19.04

%help
    Racon v1.4.7
    https://github.com/isovic/racon

%labels
    MAINTAINER "Tom Harrop"
    VERSION "Racon v1.4.7"

%post
    export DEBIAN_FRONTEND=noninteractive

    # deps
    apt-get clean
    apt-get update
    apt-get install -y \
        apt-transport-https \
        build-essential \
        cmake \
        git \
        language-pack-en \
        lsb-release \
        nvidia-modprobe \
        python \
        software-properties-common \
        wget 

    #  nvidia driver
    add-apt-repository -y ppa:graphics-drivers/ppa
    apt update
    apt install -y nvidia-driver-430 nvidia-cuda-dev nvidia-cuda-toolkit

    # download racon
    mkdir racon
    wget -O "racon.tar.gz" \
        --no-check-certificate \
        https://github.com/lbcb-sci/racon/releases/download/1.4.7/racon-v1.4.7.tar.gz
    tar -zxf racon.tar.gz \
        -C racon \
        --strip-components 1

    # build and install with cuda support
    cd racon || exit 1
    git submodule update --init --recursive || true     # have to allow fail
    mkdir build && cd build || exit 1
    cmake \
        -D CUDA_TOOLKIT_ROOT_DIR=/usr/lib/cuda \
        -DCMAKE_BUILD_TYPE=Release \
        -Dracon_build_tests=ON \
        -Dracon_build_wrapper=ON \
        -Dracon_enable_cuda=ON \
        ..
    make && make install
    cd ../.. || exit 1
    rm racon.tar.gz

%runscript
    exec /racon/build/bin/racon "$@"

%environment
    export PATH="${PATH}:/racon/build/bin"

