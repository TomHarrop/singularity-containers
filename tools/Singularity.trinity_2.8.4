Bootstrap: docker
From: trinityrnaseq/trinityrnaseq:2.8.4

%help

    Container for Trinity 2.8.4
    https://github.com/trinityrnaseq/trinityrnaseq/releases

%labels

    VERSION "Trinity 2.8.4"

%post
    
    apt-get update \
        && apt-get install -y \
        language-pack-en

    # install RSE
Mdo    mkdir rsem-install
    wget -O "rsem.tar.gz" \
        https://github.com/deweylab/RSEM/archive/v1.3.0.tar.gz
    tar -zxf rsem.tar.gz \
        -C rsem-install \
        --strip-components 1
    cd rsem-install
    make && make install
    cd ..
    rm -rf rsem.tar.gz rsem-install

%environment

    PATH="${PATH}:/usr/local/bin/trinityrnaseq/util:/usr/local/bin/trinityrnaseq/util/support_scripts:/usr/local/bin/trinityrnaseq/util/misc"

%runscript

    exec /usr/local/bin/trinityrnaseq/Trinity "$@"
